<?xml version="1.0"?>
<launch>

<param name="use_sim_time" value="True"/>
<arg name = "world" default="empty"/>

<!-- Start the costmap -->
<node name="costmap_node" pkg="costmap_2d" type="costmap_2d_node" output="screen" >
  <rosparam file="$(find ramp_launch)/launch/costmap_param/my_rolling_costmap.yaml" command="load" />
</node>



<!-- Start Gazebo simulation and missing tfs for the Turtlebot in Gazebo -->
<include file="$(find ramp_launch)/launch/world_parallel.launch" if="$(eval world=='parallel')"> </include> 
<include file="$(find ramp_launch)/launch/world_dynamic.launch" if="$(eval world=='dynamic')"> </include>
<include file="$(find ramp_launch)/launch/world_actor.launch" if="$(eval world=='actor')"> </include>
<include file="$(find ramp_launch)/launch/world_cafe.launch" if="$(eval world=='cafe')"> </include> 
<include file="$(find ramp_launch)/launch/world_cafe.launch" if="$(eval world=='ros_cafe')"> </include> 
<include file="$(find ramp_launch)/launch/world_empty.launch" if="$(eval world=='empty')"> </include> 

<node name="pub_map_equal_odom"  pkg="ramp_sensing" type="pub_map_equal_odom" />

<node name="pub_tf_missing_turtlebot_gazebo"  pkg="ramp_sensing" type="pub_tf_missing_turtlebot_gazebo" />

</launch>