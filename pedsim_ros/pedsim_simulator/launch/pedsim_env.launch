<?xml version="1.0"?>
<launch>
  <arg name="kbd_teleop" default="false"/>
  <arg name="rqt_teleop" default="true"/>
  <arg name="visualize" default="true"/>
  <arg name="with_robot" default="true"/>
  <arg name="scene" default="scene_1"/>
  <arg name="gui" default="true" />
  <arg name="simulation_factor" default="1.0"/> <!-- Speed up -->
  <arg name="update_rate" default="25.0"/> <!-- Hz -->

  <!-- Set Robot Goal params -->
  <group if="$(eval scene=='scene_1')">
    <rosparam> robot_info/goal: [5, 5, 0.785] </rosparam>
    <rosparam> robot_info/DOF_min: [0,     0, -3.14159] </rosparam>
    <rosparam> robot_info/DOF_max: [6.0, 6.0,  3.14159] </rosparam>
  </group>

  <group if="$(eval scene=='parallel')">
    <rosparam> robot_info/goal: [2, 12, 1.5702] </rosparam>
    <rosparam> robot_info/DOF_min: [0,     0, -3.14159] </rosparam>
    <rosparam> robot_info/DOF_max: [4.0, 14.0,  3.14159] </rosparam>
  </group>

  <group if="$(eval scene=='cross')">
    <rosparam> robot_info/goal: [1, 2, 0.785] </rosparam>
    <rosparam> robot_info/DOF_min: [0,     0, -3.14159] </rosparam>
    <rosparam> robot_info/DOF_max: [6.0, 6.0,  3.14159] </rosparam>
  </group>

  <!-- Simulator -->
  <include file="$(find pedsim_simulator)/launch/simulator.launch">
    <arg name="kbd_teleop" value="$(arg kbd_teleop)"/>
    <arg name="rqt_teleop" value="$(arg rqt_teleop)"/>

    <arg name="scene_file" value="$(find pedsim_simulator)scenarios/scene_1.xml" if="$(eval scene=='scene_1')"/>
    
    <arg name="scene_file" value="$(find pedsim_simulator)scenarios/parallel.xml" if="$(eval scene=='parallel')"/>

    <arg name="scene_file" value="$(find pedsim_simulator)scenarios/cross.xml" if="$(eval scene=='cross')"/>
    
    <arg name="with_robot" value="$(arg with_robot)"/>
    <arg name="simulation_factor" value="$(arg simulation_factor)"/>
    <arg name="update_rate" value="$(arg update_rate)"/>
    <arg name="default_queue_size" value="10"/>
    <arg name="max_robot_speed" value="1.5"/>   <!-- ToDo: Take from ramp parameters config-->
    <arg name="robot_mode" value="1"/>
    <arg name="enable_groups" value="true"/>
    <arg name="pose_initial_x" value="0.0"/>
    <arg name="pose_initial_y" value="0.0"/>
    <arg name="pose_initial_theta" value="0.0"/>
  </include>

  <!-- Visualizer -->
  <include file="$(find pedsim_visualizer)/launch/visualizer.launch"/>

  <!-- Rviz -->
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find pedsim_simulator)/rviz/social_contexts_activities.rviz" if="$(arg visualize)"/>

  <!-- Simulator -->
  <include file="$(find pedsim_gazebo_plugin)/launch/training.launch">
    <arg name="gui" value="$(arg gui)" />
  </include>    

  <node name="pub_tf_missing_turtlebot_gazebo"  pkg="ramp_sensing" type="pub_tf_missing_turtlebot_gazebo" />

  <node name="pub_map_equal_odom" pkg="ramp_sensing" type="pub_map_equal_odom" />

</launch>
